<xs:schema xmlns="http://www.rixg.org.uk/" xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.rixg.org.uk/">

	<xs:include schemaLocation="../Types/Clinician.xsd"/>
	<xs:include schemaLocation="../Types/CF_EDTA_COD.xsd"/>
	<xs:include schemaLocation="../Types/ActionCode.xsd"/>

	<!-- SDA: Diagnosis -->
	<xs:complexType name="CauseOfDeath">
		<xs:sequence>
			<xs:element minOccurs="0" name="UpdatedOn" type="xs:dateTime">
				<xs:annotation>
					<xs:documentation>Last Modified Date</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="DiagnosisType" minOccurs="0">
				<xs:annotation>
					<xs:documentation>The type of diagnosis: admitting, working, final, discharge</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="DiagnosingClinician" type="Clinician" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Clinician Coding Death</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="Diagnosis" type="CF_EDTA_COD">
				<xs:annotation>
					<xs:documentation>Coded Caused of Death (EDTA)</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="EnteredOn">
				<xs:annotation>
					<xs:documentation>The date the COD was recorded in the medical record.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element minOccurs="0" name="ActionCode" type="ActionCode">
				<xs:annotation>
					<xs:documentation>Add/Update/Delete Control</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element minOccurs="0" name="ExternalId" type="xs:string">
				<xs:annotation>
					<xs:documentation>Unique Identifier</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
